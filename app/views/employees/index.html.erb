<h2 class="title is-2 sync_label"><%= @branch.name%>`s employees </h2>
<br>
<table class="highlight centered">
    <thead>
      <tr>
          <th data-field="id">Name</th>
          <th data-field="name">Email</th>
          <th data-field="price">Phone</th>
          <th data-field="price">Coupons</th>
          <th data-field="price">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each_with_index do |employee, index| %>
      <tr>
        <td><a href="<%= company_branch_employee_path(current_company.id, @branch.id, employee.id) %>"><%= "#{employee.name}" %></a></td>
        <td><%= "#{employee.email}" %></td>
        <td><%= "#{employee.phone}" %></td>
        <td><a href="#" data-toggle="modal" data-target="#couponsModal">Validated coupons</a></td>
        <td><a data-method="DELETE" href="<%= company_branch_employee_path(current_company.id, @branch.id, employee.id) %>">Delete</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<br>
<a href="<%= new_company_branch_employee_path(current_company.id, @branch.id) %>" class="row btn" >Add Employee</a>
<br>

<a href="<%= company_branch_path(current_company.id, @branch.id) %>">Back to Branch</a>

<!-- Modal -->
<div class="modal fade" id="couponsModal" tabindex="-1" role="dialog" aria-labelledby="couponsModalLabel">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title sync_label" id="couponsModalLabel">Validated coupons by <%= "#{@employee.name}" %> </h4>
  </div>
  <div class="modal-body">
    <%= render "validated_coupons" %>
  </div>
  <div class="modal-footer">
    <button href="/" type="button" class="waves-effect waves-light btn" data-dismiss="modal">Close</button>
  </div>
</div>
<!-- End Modal -->
