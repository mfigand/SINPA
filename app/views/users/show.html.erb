<section class="user_background">

<h2 class="salute">Welcome <%= current_user.name %>!</h2>

<div class="row">

  <section class="col-md-5 statistics1 font_2">
    <div class="row">
      <div class="col-md-5 kms">
        <h2 class="kms_counter">75</h2><h2>kms</h2>
      </div>
       <div class="col-md-1">
      </div>
      <div class="col-md-5 level">
        <h2>Level</h2><h2 class="level_counter">2</h2>
      </div>

    </div>
    <div class="row">
      <div class="col-md-9 col-md-offset-1 races">
        <h2 class="races_counter">3</h2><h2>races</h2>
      </div>
    </div>
  </section>

  <section class="col-md-7 statistics2 font_2">
    <div class="row">
      <div class="col-md-12 coupons">
       <a href="<%= user_coupons_path(current_user) %>" class="waves-effect waves-light btn">View Coupons</a>
       <br>
       <a href="<%= users_rewards_path(current_user) %>" class="waves-effect waves-light btn">Rewards list</a>
      </div>
      <br>
      <a href="<%= users_rewards_map_path(current_user) %>" class="btn-rewards_map waves-effect waves-light btn">Rewards map</a>
     </div>
    </div>

    <div class="row">
      <div class="col-md-12 syncronize">
        <h4>Syncronize your kms</h4>
        <button class="js-btn-runkeeper waves-effect waves-light" type="button" name="button">
          <img src="/images/runkeeper_icon.png" alt="" />
        </button>
        <button class="nikerunning waves-effect waves-light" type="button" name="button">
          <img src="http://a5.mzstatic.com/eu/r30/Purple2/v4/19/85/13/19851378-4878-501d-41b9-ed464cf08a9c/icon175x175.png" alt="" />
        </button>
        <button class="endomondo waves-effect waves-light" type="button" name="button">
          <img src="http://4wod.com/wp-content/uploads/2014/04/Endomondo-logo-1-300x300.jpg" alt="" />
        </button>
        <button class="sportstracker waves-effect waves-light" type="button" name="button">
          <img src="http://imagenes.es.sftcdn.net/es/scrn/3336000/3336628/sports-tracker-02-535x535.png" alt="" />
        </button>
        <button class="runtastic waves-effect waves-light" type="button" name="button">
          <img src="http://imagenes.es.sftcdn.net/es/scrn/6652000/6652827/runtastic-10-535x535.png" alt="" />
        </button>
        <button class="tomtom waves-effect waves-light" type="button" name="button">
          <img src="https://lh5.ggpht.com/YcKHqjEx4XLqcv1jhubgp9-6XVY2AZQHjwR3sFdkQX2oAQeQQ1KF85rLJc7Z-RxC2w" alt="" />
        </button>
      </div>
    </div>
  </section>

</div>

</section>
